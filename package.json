{
  "name": "atlas-contracts",
  "version": "1.0.0",
  "description": "Smart Contracts for Universal",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.4.0",
    "dotenv": "^10.0.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/test-helpers": "^0.5.12",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.6",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.1",
    "hardhat": "^2.5.0",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.17",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "0.0.5",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "scripts": {
    "test": "npx hardhat test",
    "compile": "npx hardhat compile",
    "clean": "npx hardhat clean",
    "start": "npx hardhat run scripts/deployAll.js",
    "deploy": "npx hardhat run scripts/deploy_reuse.ts",
    "deploy:p": "npx hardhat run scripts/deploy_reuse.ts --network polygon",
    "start:polygon": "npx hardhat run scripts/deployAll.js --network polygon",
    "start:polygon:interact": "npx hardhat run scripts/interact.js --network polygon",
    "start:ropsten": "npx hardhat run scripts/deployAll.js --network ropsten",
    "start:eth": "npx hardhat run scripts/deployAll.js --network ethereum",
    "lint:sol": "solhint -f table contracts/**/*.sol"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AtlasUSV/atlas-contracts.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/AtlasUSV/atlas-contracts/issues"
